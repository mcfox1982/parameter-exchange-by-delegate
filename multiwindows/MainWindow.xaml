<Window x:Class="multiwindows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:multiwindows"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox Name="TextBoxMain"  Margin="3" Width="500" Height="50" FontSize="30" />
            <Button Name="ButtonMain" Content="New Window" FontSize="30" Click="ButtonMain_OnClick"/>
        </StackPanel>
    </Grid>
</Window>
